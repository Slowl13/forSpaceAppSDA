using System;
class Exercices {
    
  static void APlusB() {
      Console.WriteLine("Введите целочисленные a и b (1 ≤ a,b ≤ 1000) через пробел.");
        
    int[] numbers = Array.ConvertAll(Console.ReadLine().Split(), int.Parse);
    
    if (numbers.Length != 2){
        Console.WriteLine("Вы ввели неверное количество чисел! Попробуйте снова.");
        return;
    }
        
    int a = numbers[0];
    int b = numbers[1];
    
    if (a >= 1 && a <= 1000 && b >= 1 && b <= 1000){
         Console.WriteLine(a + b);
    } else {
        Console.WriteLine("Как минимум одно из введенных чисел не соответствует условию! Попробуйте снова.");
    }
  }  
  
  static void SumN() {
    Console.WriteLine("Введите n (количество чисел для сложения).");
      
    int n = Int32.Parse(Console.ReadLine());
     
    Console.WriteLine("Введите следующее кол-во чисел через пробел: " + n);
    
    int[] numbers = Array.ConvertAll(Console.ReadLine().Split(), int.Parse);
    
    if (numbers.Length != n){
        Console.WriteLine("Вы ввели неверное количество чисел! Попробуйте снова.");
        return;
    }
    
    int sum = 0;
    
    for (int i = 0; i < numbers.Length; i++){
        if (numbers[i] >= 1 && numbers[i] <= 10000){
            sum += numbers[i];
        } else {
            Console.WriteLine("Одно из чисел не соответсвует диапазону. Попробуйте снова.");
            return;
        }
    }
    
    Console.WriteLine(sum);
  }
  
  static void Main() {
    // APlusB();
    // SumN();
  }
}
